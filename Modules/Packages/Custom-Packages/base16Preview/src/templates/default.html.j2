<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Base16 Previewer</title>
        <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
        <script>
            $(document).ready(()=>{
                $("#nt").click(()=>{
                    window.location.href = "{{ next_theme }}"
                });

                $("#pt").click(()=>{
                    window.location.href = "{{ prev_theme }}"
                });

                $("#st").change(()=>{
                    const newTheme = $("#st option:selected").val();

                    window.location.href = newTheme;
                });
            });
        </script>
        <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
        <style>
            body {
                background-color: #{{ base00 }};
                color: #{{ base05 }};
            }

            h2 {
                color: #{{ base06 }};
            }

            .Nav-Bar li {
                color: #{{ base06 }};
            }

            .Nav-Bar li:hover {
                background-color: #{{ base02 }};
            }

            .comment {
                color: #{{ base03 }};
            }

            .string {
                color: #{{ base0B }};
            }

            .keyword {
                color: #{{ base0E }};
            }

            .number {
                color: #{{ base09 }};
            }

            .function {
                color: #{{ base0D }};
            }
        </style>
    </head>
    <body>
        <div class="Nav-Bar">
            <ul>
                <li id="pt">Previous Theme</li>
                <li id="nt">Next Theme</li>
                <select id="st">
                    {% for theme in themes %}
                        <option value="{{ theme['option'] }}">{{ theme['label'] }}</option>
                    {% endfor %}
                </select>
            </ul>
        </div>
        <div class="main">
            <h2>
                {{ curr_theme }}
            </h2>
